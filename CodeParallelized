#include <iostream>
#include <vector>
#include <chrono>
#include <cstdlib>
#include <climits>
#include <omp.h>

int NUM_VERTICES = 100;

int getMinVertex(std::vector<int>& distances, std::vector<bool>& visited) {
    int minDist = INT_MAX;
    int minIndex = -1;

    
    #pragma omp parallel
    {
        int localMin = INT_MAX;
        int localIndex = -1;

        #pragma omp for nowait
        for (int i = 0; i < NUM_VERTICES; ++i) {
            if (!visited[i] && distances[i] <= localMin) {
                localMin = distances[i];
                localIndex = i;
            }
        }

        
        #pragma omp critical
        {
            if (localMin < minDist) {
                minDist = localMin;
                minIndex = localIndex;
            }
        }
    }

    return minIndex;
}

void runDijkstra(std::vector<std::vector<int>>& graph, int source) {
    std::vector<int> distances(NUM_VERTICES, INT_MAX);
    std::vector<bool> visited(NUM_VERTICES, false);

    distances[source] = 0;

    auto startTotal = std::chrono::high_resolution_clock::now();

    for (int count = 0; count < NUM_VERTICES - 1; ++count) {

        int u = getMinVertex(distances, visited);
        visited[u] = true;

        // PARALLEL UPDATE LOOP
        #pragma omp parallel for
        for (int v = 0; v < NUM_VERTICES; ++v) {
            if (!visited[v] && graph[u][v] != 0 && distances[u] != INT_MAX &&
                distances[u] + graph[u][v] < distances[v]) {

                
                distances[v] = distances[u] + graph[u][v];
            }
        }
    }

    auto endTotal = std::chrono::high_resolution_clock::now();

    std::cout << "Total Execution Time: "
              << std::chrono::duration<double>(endTotal - startTotal).count()
              << " seconds\n";
}

int main() {
    std::vector<std::vector<int>> graph(NUM_VERTICES, std::vector<int>(NUM_VERTICES, 0));

    for (int i = 0; i < NUM_VERTICES; ++i) {
        for (int j = 0; j < NUM_VERTICES; ++j) {
            if (i != j) {
                graph[i][j] = rand() % 50 + 1;
            }
        }
    }

    runDijkstra(graph, 0);
    return 0;
}
